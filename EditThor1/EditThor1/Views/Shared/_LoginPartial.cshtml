@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <div class="dropdown navbar-right">
            <a class="btn dropdown-toggle " id="userbtn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                @User.Identity.GetUserName()
                <span class="glyphicon glyphicon-user" aria-hidden="true"> </span>
                <span class="caret" id="red"></span>
            </a>    
                <ul class="dropdown-menu">
                    <li>
                        @Html.ActionLink("Change your password", "ChangePassword", "Manage")
                    </li>
                    <li>
                        @Html.ActionLink("Help", "Help", "Home")
                    </li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>
                </ul>
        </div>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
